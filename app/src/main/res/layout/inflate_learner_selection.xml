<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">


    <ImageView
        android:background="@color/colorAccentWhite"
        android:id="@+id/add_learner"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_add_learner"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageView
        android:background="@color/colorAccentWhite"
        android:id="@+id/edit_learner"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:src="@drawable/ic_edit_learner"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:background="@color/colorAccentWhite"
        android:id="@+id/delete_learner"
        android:layout_gravity="center"
        android:clickable="true"
        android:src="@drawable/ic_delete_learner"
        android:layout_width="50dp"
        android:layout_height="50dp" />


</LinearLayout>